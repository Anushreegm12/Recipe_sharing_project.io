<div class="px-4 py-5 my-5 text-center">
  <h1 class="display-5 fw-bold">Contact Us</h1>
  <div class="col-lg-6 mx-auto">
    <p class="lead">We'd love to hear from you! Fill out the form below to get in touch with us.</p>
  </div>
</div>

<div class="row justify-content-center">
  <!-- Form Container -->
  <div class="col-8">
    <form action="/contact" method="POST">

      <div class="row g-3">

        <!-- Full Name -->
        <div class="col-12">
          <label for="fullName" class="form-label">Full Name</label>
          <input type="text" name="fullName" id="fullName" class="form-control" required>
        </div>

        <!-- Email Address -->
        <div class="col-12">
          <label for="email" class="form-label">Email Address</label>
          <input type="email" name="email" id="email" class="form-control" required>
        </div>

        <!-- Phone Number -->
        <div class="col-12">
          <label for="phone" class="form-label">Phone Number</label>
          <input type="text" name="phone" id="phone" class="form-control">
        </div>

        <!-- Message -->
        <div class="col-12">
          <label for="message" class="form-label">Message</label>
          <textarea name="message" id="message" class="form-control" cols="30" rows="4" required></textarea>
        </div>

        <!-- Submit Button -->
        <div class="col-12">
          <button type="submit" class="btn" style="background-color: #f6a9b1; color: white;">Send Message</button>
        </div>

      </div>

    </form>
  </div>
</div>
