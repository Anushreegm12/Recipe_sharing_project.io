<div class="px-4 py-5 my-5 text-center">
  <h1 class="display-5 fw-bold" style="color: #ff7a8c;">Submit Your Recipe</h1>
  <div class="col-lg-6 mx-auto">
    <p class="lead">Share your amazing recipes with thousands of web developers across the world. Fill our form to get started.</p>
  </div>
</div>

<div class="row justify-content-center">

  <% if(infoSubmitObj != '') { %>
    <div class="col-8 alert alert-success" role="alert">
      <%= infoSubmitObj %>
    </div>
  <% } %>

  <% if(infoErrorsObj != '') { %>
    <div class="col-8 alert alert-danger" role="alert">
      <%= infoErrorsObj[0].message %>
    </div>
  <% } %>

  <div class="col-8">

    <form action="/submit-recipe" enctype="multipart/form-data" method="POST">
    
      <div class="row g-3">

        <div class="col-12">
          <label for="email" class="form-label" style="color: #ff7a8c;">Email</label>
          <input type="email" name="email" id="email" class="form-control" >
        </div>

        <div class="col-12">
          <label for="name" class="form-label" style="color: #ff7a8c;">Recipe Name</label>
          <input type="text" name="name" id="name" class="form-control" >
        </div>
        
        <div class="col-12">
          <label for="description" class="form-label" style="color: #ff7a8c;">Description</label>
          <textarea name="description" id="description" class="form-control" cols="30" rows="4" ></textarea>
        </div>

        <div class="col-12">
          <label for="name" class="form-label" style="color: #ff7a8c;">Ingredients</label><br>
          <small>Example: Ice</small>
          <div class="ingredientList">
            <div class="ingredientDiv mb-1">
              <input type="text" name="ingredients" class="form-control">
            </div>
          </div>
        </div>

        <div class="col-12">
          <button type="button" class="btn btn-outline-primary" id="addIngredientsBtn" style="border-color: #ff7a8c; color: #ff7a8c;">+ Ingredient</button>
        </div>

        <div class="col-12">
          <label for="category" style="color: #ff7a8c;">Select Category</label>
          <select class="form-select form-control" name="category" aria-label="Category">
            <option selected style="color: #ff7a8c;">Select Category</option>
            <option value="Thai" style="color: #ff7a8c;">Thai</option>
            <option value="American" style="color: #ff7a8c;">American</option>
            <option value="Chinese" style="color: #ff7a8c;">Chinese</option>
            <option value="Mexican" style="color: #ff7a8c;">Mexican</option>
            <option value="Indian" style="color: #ff7a8c;">Indian</option>
          </select>
        </div>

        <div class="col-12">
          <label for="image" style="color: #ff7a8c;">Product Image</label>
          <input type="file" class="form-control" name="image" accept="image/*">
        </div>

        <div class="col-12">
          <button type="submit" class="btn btn-primary" style="background-color: #ff7a8c; border-color: #ff7a8c;">Submit Recipe</button>
        </div>

      </div>
    
    </form>

  </div>
</div>
